@model Mosh.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
<style type="text/css">
    .popular{
        color:red;

    }
    </style>

    }
@{ 
    var pop = Model.Customers.Count > 1 ? "popular" : null;
}
<h2 class="@pop">@Model.Movie.Name</h2>
@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
</ul>
}