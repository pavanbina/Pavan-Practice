@using MOSH.ViewModels
@model IEnumerable<MOSH.Models.Movie>
@{
    ViewBag.Title = "Index";
}

@if (!Model.Any())

{
    <p>We don't have any Movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.GenreName</td>
                </tr>
            }
        </tbody>
    </table>
}

