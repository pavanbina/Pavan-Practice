@model MOSH.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
}
@section Styles
{

}
<h2>New Customer</h2>
@using (@Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.customer.Name)
        @Html.TextBoxFor(m => m.customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.customer.DOB)
        @Html.TextBoxFor(m => m.customer.DOB, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MemberShipName"), "Select Membership Type", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.customer.IsSubscribedtoNewsLetter)Subscribed to News letter?
        </label>
    </div>
    @Html.HiddenFor(m=>m.customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

